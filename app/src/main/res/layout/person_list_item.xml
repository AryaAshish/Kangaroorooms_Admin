<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/itemLayout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:padding="10dp">

            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/phoneNo"
                android:layout_below="@+id/emailTextView"
                android:text="Sanjay147@gmail.com"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/phoneNo"
                android:layout_below="@+id/phoneNo"
                android:fontFamily="serif-monospace"
                android:text="Email"
                android:textAlignment="viewStart"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/phoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/personNameTextView"
                android:layout_below="@+id/phoneNoTextView"
                android:text="8280836046"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/phoneNoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/personName"
                android:layout_below="@+id/personName"
                android:fontFamily="serif-monospace"
                android:text="Phone Number"
                android:textAlignment="viewStart"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/personName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/personNameTextView"
                android:layout_marginStart="110dp"
                android:text="AMAN SINGH"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/personNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:fontFamily="serif-monospace"
                android:text="Name"
                android:textAlignment="viewStart"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/personView"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/profile_icon" />

            <Button
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/personView"
                android:background="@drawable/button_background"
                android:backgroundTint="#4CAF50"
                android:onClick="listingsList"
                android:text="LISTINGS"
                android:id="@+id/listings"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/personView"
                android:background="@drawable/button_background"
                android:backgroundTint="#4CAF50"
                android:onClick="bookingsList"
                android:id="@+id/bookings"
                android:text="BOOKINGS"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/endColor"
                android:onClick="deleteUserList"
                android:id="@+id/deleteUser"
                android:text="DELETE USER"
                android:textColor="#FFFFFF" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>